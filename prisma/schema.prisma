generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  PARENT
}

enum Shift {
  MORNING
  AFTERNOON
  EVENING
  FULLTIME
}

enum Segment {
  INFANTIL
  FUNDAMENTAL_I
  FUNDAMENTAL_II
  MEDIO
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(PARENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Mudei para relação Implícita (N:N) para facilitar o Multi-Select
  teacherClasses  Class[] 
  
  // Relação Implícita (N:N)
  teacherSubjects Subject[] 
}

model Class {
  id   String @id @default(cuid())
  name String
  grade String
  year Int
  shift Shift
  segment Segment

  // AJUSTE AQUI: Mudamos de "teacher" (singular) para "teachers" (array)
  // Isso permite que a turma tenha vários professores (Matemática, História, etc)
  teachers User[] 

  students Enrollment[]
  grades   Grade[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Student {
  id   String @id @default(cuid())
  name String

  birthDate DateTime?
  
  guardianName  String?
  guardianPhone String?
  guardianEmail String? // <--- ADICIONEI ESTE CAMPO QUE ESTAVA FALTANDO

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  enrollments Enrollment[]
  grades      Grade[]
}

model Enrollment {
  id        String   @id @default(cuid())
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
  class     Class    @relation(fields: [classId], references: [id])
  classId   String
  createdAt DateTime @default(now())
}

model Subject {
  id   String @id @default(cuid())
  name String

  createdAt DateTime @default(now())
  grades    Grade[]

  teachers User[] // Relação N:N com User
}

model Grade {
  id        String   @id @default(cuid())
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
  subject   Subject  @relation(fields: [subjectId], references: [id])
  subjectId String
  class     Class    @relation(fields: [classId], references: [id])
  classId   String
  value     Float
  term      Int
  createdAt DateTime @default(now())
}