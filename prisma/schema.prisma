generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  PARENT
}

enum Shift {
  MORNING
  AFTERNOON
  EVENING
  FULLTIME
}

enum Segment {
  INFANTIL
  FUNDAMENTAL_I
  FUNDAMENTAL_II
  MEDIO
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(PARENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  
  teacherClasses  Class[] 
  
  
  teacherSubjects Subject[] 
}

model Class {
  id   String @id @default(cuid())
  name String
  grade String
  year Int
  shift Shift
  segment Segment

  
  teachers User[] 

  students Enrollment[]
  grades   Grade[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Student {
  id   String @id @default(cuid())
  name String

  email         String?
  
  birthDate DateTime?
  guardianName  String?
  guardianPhone String?
  guardianEmail String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  enrollments Enrollment[]
  grades      Grade[]
}

model Enrollment {
  id        String   @id @default(cuid())
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
  class     Class    @relation(fields: [classId], references: [id])
  classId   String
  createdAt DateTime @default(now())
}

model Subject {
  id   String @id @default(cuid())
  name String

  code String?

  createdAt DateTime @default(now())
  grades    Grade[]
  
  teachers User[] // Relação N:N com User
}

model Grade {
  id        String   @id @default(cuid())
  value     Float    // Média Final (Calculada automaticamente)
  
  testGrade         Float?   @default(0) // 1. Avaliação / Prova
  workGrade         Float?   @default(0) // 2. Trabalhos
  behaviorGrade     Float?   @default(0) // 3. Participação

  term      Int      // 1, 2, 3, 4
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  studentId String
  student   Student @relation(fields: [studentId], references: [id])
  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])
  classId   String
  class     Class   @relation(fields: [classId], references: [id])
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text // Permite textos longos
  imageUrl  String?  // Opcional: URL da imagem
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}