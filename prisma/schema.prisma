generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url  = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  PARENT
}

enum Shift {
  MORNING     // Manhã
  AFTERNOON   // Tarde
  EVENING     // Noite
  FULLTIME    // Integral
}

enum Segment {
  INFANTIL
  FUNDAMENTAL_I
  FUNDAMENTAL_II
  MEDIO
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(PARENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teacherClasses Class[] @relation("TeacherClasses")
  teacherSubjects Subject[] @relation("TeacherSubjects")
}


model Class {
  id        String   @id @default(cuid())

  /// Nome da turma, ex: "5º Ano A"
  name      String

  /// Série / ano escolar, ex: "5º Ano"
  grade     String

  /// Ano letivo, ex: 2025
  year      Int

  /// Turno: manhã / tarde / noite / integral
  shift     Shift

  /// Segmento: Infantil, Fundamental I/II, Médio
  segment   Segment

  /// Professor principal da turma (pode ser opcional)
  teacher   User?    @relation("TeacherClasses", fields: [teacherId], references: [id])
  teacherId String?

  /// Matrículas dos alunos nessa turma
  students  Enrollment[]

  /// Notas dos alunos nessa turma
  grades    Grade[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Student {
  id         String       @id @default(cuid())
  name       String

  birthDate     DateTime?   
  guardianName  String?      
  guardianPhone String?    

  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  enrollments Enrollment[]
  grades      Grade[]
}

model Enrollment {
  id        String   @id @default(cuid())
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
  class     Class    @relation(fields: [classId], references: [id])
  classId   String
  createdAt DateTime @default(now())
}


model Subject {
  id        String   @id @default(cuid())
  name      String

  createdAt DateTime @default(now())
  grades    Grade[]

  teachers  User[]   @relation("TeacherSubjects")
}

model Grade {
  id         String   @id @default(cuid())
  student    Student  @relation(fields: [studentId], references: [id])
  studentId  String
  subject    Subject  @relation(fields: [subjectId], references: [id])
  subjectId  String
  class      Class    @relation(fields: [classId], references: [id])
  classId    String
  value      Float
  term       Int      // bimestre / trimestre
  createdAt  DateTime @default(now())
}
